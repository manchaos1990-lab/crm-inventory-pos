# Environment Configuration for CRM-POS-Inventory System

# Server Configuration
PORT=3000
NODE_ENV=production

# Database Configuration (for local SQLite)
DB_TYPE=sqlite
DB_PATH=./db/app.db

# For cloud deployment (Render PostgreSQL), use these instead:
# DB_TYPE=postgres
# DATABASE_URL=postgresql://user:password@host:port/database

# Session Configuration
SESSION_SECRET=crm-secret-key-change-in-production

# CORS Origins (add your Render domain when deployed)
CORS_ORIGINS=http://localhost:3000,http://192.168.0.194:3000,https://your-app.onrender.com

# File Upload Configuration
MAX_FILE_SIZE=5242880
UPLOAD_DIR=./uploads
